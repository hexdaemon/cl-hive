[Unit]
Description=Hive AI Advisor Timer (15 minute intervals)
Documentation=https://github.com/santyr/cl-hive

[Timer]
# Run every 15 minutes
OnCalendar=*:0/15
# Run immediately if we missed a scheduled time (e.g., system was down)
Persistent=true
# Add random delay up to 30 seconds to avoid exact timing
RandomizedDelaySec=30

[Install]
WantedBy=timers.target
